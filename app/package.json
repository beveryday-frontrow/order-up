{
  "name": "order-up",
  "version": "1.0.0",
  "description": "Order Up! â€” PR monitoring dashboard",
  "private": true,
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "start": "tsx server.ts",
    "dev": "tsx server.ts",
    "electron": "electron .",
    "build": "electron-builder --mac",
    "build:dir": "electron-builder --mac --dir"
  },
  "build": {
    "appId": "com.orderup.dashboard",
    "productName": "Order Up!",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "asar": true,
    "asarUnpack": [
      "**/*"
    ],
    "files": [
      "electron-main.cjs",
      "server.ts",
      "tsconfig.json",
      "public/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../config",
        "to": "config"
      },
      {
        "from": "../scripts",
        "to": "scripts"
      }
    ],
    "directories": {
      "output": "../dist"
    }
  },
  "dependencies": {
    "express": "^4.21.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  }
}
